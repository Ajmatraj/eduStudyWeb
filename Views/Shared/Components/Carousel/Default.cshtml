@model IEnumerable<EduStudyWeb.Models.Carousel>

@{
    ViewData["Title"] = "Default";
}

<section class="home-slider owl-carousel">
    @foreach (var item in Model)
    {
        <div class="slider-item" style="background-image:url('@Url.Content(item.Image.imagePath)');">
            <div class="overlay"></div>
            <div class="container">
                <div class="row no-gutters slider-text align-items-center justify-content-start" data-scrollax-parent="true">
                    <div class="col-md-7 ftco-animate mb-md-5">
                        <span class="subheading">@item.SubHeading</span>
                        <h1 class="mb-4">@item.Heading</h1>
                        <p><a href="#" class="btn btn-primary px-4 py-3 mt-3">Our Services</a></p>
                    </div>
                </div>
            </div>
        </div>
    }
</section>
